<div class = "header">
	<div class = "headleft"><div class = "downarrow left" />Facts<div class = "downarrow right" /></div>
	<div class = "headtext">fuseGap</div>
	<div class = "headright"><div class = "downarrow left" />Topics<div class = "downarrow right" /></div>
</div>
<div class = "sidebar at left top">
	<div class = "sidebar wrapper top">
		<div id = "left" class = " mousescroll sidebar"></div>
	</div>
</div>
<div class = "sidebar at left bottom">
	<div class = " sidebar wrapper bottom">
		<button class = "button fact-one size-four" id = "create_reason">+ Add Fact +</button>
	</div>
</div>
<div class = "page content">
	<div class = "panel misc">
		<%= topic.get('title') %></br>
		<%= topic.get('description') %></br>
		<form id = "new_reason" style = "margin-bottom: 0">
			<label>Title:</label>
			<textarea id = "new_reason_title" />
			<label>Description:</label>
			<textarea id = "new_reason_description" rows =  "4" />
			<label>Source Url 1:</label>
			<input type = "text" id = "new_reason_url1">
			<label>Source Url 2:</label>
			<input type = "text" id = "new_reason_url2">
			<label>Source Url 3:</label>
			<input type = "text" id = "new_reason_url3">
			<div style = "text-align: center">
				<input class = "button misc-one size-four" type = "submit" value = "Create Fact">
			</div>
		</form>
		<div style = "text-align: center">
			<button class = "button misc-one size-four" id = "cancel">Cancel</button>
		</div>
	</div>
</div>
<div class = "sidebar at right top">
	<div class = "sidebar wrapper top">
		<div id = "right" class = " mousescroll sidebar"></div>
	</div>
</div>
<div class = "sidebar at right bottom">
	<div class = "sidebar wrapper bottom">
		<button class = "button topic-one size-four" id = "create_topic">+ Add Topic +</button>
	</div>
</div>