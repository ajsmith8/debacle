<div>
	<ul>
		<% for (i = 0; i < reasons.length; i++) { %>
			<% if (reason_id === reasons[i].get('id')) { %>
				<div class = "mypanel reason active" style = "height: 6em; margin: 1.3em; position: relative">
			<% } else { %>
					<div class = "mypanel reason" style = "height: 6em; margin: 1.3em; position: relative">
			<% } %>
				<div class = "" style = "position: absolute; top: 0; left: 0; width: 2.75em; text-align: center">
					<button class = "vote" style = "margin-top: 1em" id = "plus_reason" value = "<%= reasons[i].get('id') %>"><div class = "upvote"></div></button>
				</div>
				<div class = "" style = "position: absolute; left: 0; top: 3em; margin-top: -1em; width: 2.75em; text-align: center">
					<%= reasons[i].get('score') %>
				</div>
				<div class = "" style = "position: absolute; bottom: 0; left: 0; width: 2.75em; text-align: center">
					<button class = "vote" style = "margin-bottom: 0.75em" id = "minus_reason" value = "<%= reasons[i].get('id') %>"><div class = "downvote"></div></button>
				</div>
				<div class = "" style = "position: relative; margin: 0 auto; width: 65%; height: 100%; font-size: 1.15em">
					<button class = "invisible-butt" id = "reason" value = "<%= reasons[i].get('id') %>" style = "margin-top: 0em"></button>
					<u><%= reasons[i].get('title') %></u>
				</div>
			</div>
		<% } %>
	</ul>
</div>